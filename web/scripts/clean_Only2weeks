#!/bin/sh 
#---------------------------------------------------------------------
# script to delete files older than 2 weeks.
#---------------------------------------------------------------------
#
echo '*############################################################################*'
echo '| Deleting files older than 2 weeks in /mnt/store2/Only2weeks                |'
echo '*============================================================================*'
echo '|                                                                            |'
find /mnt/store2/Only2weeks/* -type f -mtime 15 -exec \rm -v {} \;
echo '|                                                                            |'
echo '*============================================================================*'
echo ''
