#!/bin/tcsh -ef
#
#
if ( $#argv != 1 ) then
  echo lin : display a line with a text 
  echo \\t usage: lin \<text\>
  echo \\t example: lin \"fftir start\"
  echo \\t      or: lin \"-\"
  echo \\t      or: lin \"=\"
  echo \\t      or: lin \"+\"
  echo \\t      or: lin \"~\"
  echo \\t      or: lin \"\#\"
else
  if ( "$1" == "=" ) then
    echo ":======================================================================================================================================================================================================="
  else if ( "$1" == "-" ) then
    echo ":-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
  else if ( "$1" == "+" ) then
    echo ":+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"
  else if ( "$1" == "~" ) then
    echo ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
  else if ( "$1" == "#" ) then
    echo ":#######################################################################################################################################################################################################"
  else
    echo ":==== $1 ===================================================================================================================================================================================================" | cut -c1-200
  endif
endif
#
