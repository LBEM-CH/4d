all: ctffind3.exe ctftilt.exe

ctffind3.exe: ctffind3.o mrc_ccp4.o library.o
	g77 -static -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	ctffind3.o mrc_ccp4.o library.o -o ctffind3.exe

ctftilt.exe: ctftilt.o mrc_ccp4.o library.o
	g77 -static -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	ctftilt.o mrc_ccp4.o library.o -o ctftilt.exe
	\rm *.o

ctffind3.o: ctffind3.f
	g77 -m64 -O3 -s -fomit-frame-pointer -Wall -falign-functions=4 \
	-funroll-loops -fexpensive-optimizations -fschedule-insns2 \
	-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	-w -c ctffind3.f

ctftilt.o: ctftilt.f
	g77 -m64 -O3 -s -fomit-frame-pointer -Wall -falign-functions=4 \
	-funroll-loops -fexpensive-optimizations -fschedule-insns2 \
	-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	-w -c ctftilt.f

mrc_ccp4.o: mrc_ccp4.f
	g77 -m64 -O3 -s -fomit-frame-pointer -Wall -falign-functions=4 \
	-funroll-loops -fexpensive-optimizations -fschedule-insns2 \
	-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	-w -c mrc_ccp4.f

library.o: library.c
	gcc -m64 -O3 -DPROTOTYPE -Dalliant -D_FILE_OFFSET_BITS=64 \
	-D_LARGEFILE_SOURCE -w -c library.c
#
