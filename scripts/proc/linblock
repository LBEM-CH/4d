#!/bin/tcsh -ef
#
#
if ( $#argv == 0 ) then
  echo linblock : display a line with a text 
  echo \\t usage: linblock \<text\>
  echo \\t example: linblock \"fftir start\"
  echo \\t      or: linblock \"-\"
  echo \\t      or: linblock \"=\"
  echo \\t      or: linblock \"+\"
  echo \\t      or: linblock \"~\"
  echo \\t      or: linblock \"\#\"
else
  if ( "$1" == "=" ) then
    echo "::======================================================================================================================================================================================================="
  else if ( "$1" == "-" ) then
    echo "::-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
  else if ( "$1" == "+" ) then
    echo "::+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"
  else if ( "$1" == "~" ) then
    echo "::~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
  else if ( "$1" == "#" ) then
    echo "::#######################################################################################################################################################################################################"
  else
    echo " "
    echo ":======================================================================================================================================================================================================="
    echo "::==== $1 ====================================================================================================================================================================================================" | cut -c1-201
    echo ":======================================================================================================================================================================================================="
    echo " "
  endif
endif
#
